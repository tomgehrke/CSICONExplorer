<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainLayout">
        <item name="android:background">@drawable/paper_texture</item>
    </style>

    <style name="appMonogram">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:alpha">.5</item>
        <item name="android:src">@drawable/csicon_monogram</item>
    </style>

    <style name="activityTile">
        <item name="android:layout_height">@dimen/activity_tile_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="activityTileTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="activityTileSubTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#888</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="activityTileThumbnail">
        <item name="android:layout_width">@dimen/activity_tile_height</item>
        <item name="android:layout_height">@dimen/activity_tile_height</item>
    </style>
</resources>
